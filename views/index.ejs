<% include header %>
<div class="preload load-container load3" ng-if="ajaxicon">
   <div class="loader">Loading...</div>
</div>

<button type="button" class="btn" ng-click="flipSide()">FlipSide</button>
<!-- BEGIN MAIN PAGE -->
<div id="page-main" class="page active grid-container" ng-show="!ajaxicon">

    <div class="content-wrapper with-footer">
        <!-- BEGIN CONTENT SECTION FOR MAIN PAGE -->
        <section class="content animated zoomIn">
            <div class="entries">
                <div id="main" class="entry mview">

                    <br>
                    <h1 class="anim-go-right grow">
                        <a href="https://github.com/poundkey"><i class="fa fa-windows"></i></a> TSLink </h1>
                        <h5 class="anim-go-right">
                            <a href="https://github.com/poundkey/TSLink"><i class="fa fa-github grow"></i></a>
                            A Realtime Bus Timer App Via Translink Vancouver
                        </h5>

                        <div ng-show="!user && !signup && !signin">
                            <button type="button" class="btn" ng-click="signin_c()">
                                <i class="fa fa-terminal"></i> Log in
                            </button>
                            &nbsp;
                             <button type="button" class="btn" ng-click="signup_c()">
                                <i class="fa fa-fire"></i> Sign up
                            </button>
                        </div>

                        <div ng-if="!user && signin">
                            <form id="newsletter-form" class="the-form anim-go-left" ng-submit="loginUser()">
                                <div class="field-wrapper">
                                    <input type="text" class="textfield required" ng-model="$parent.username" name="username" placeholder="Please enter your username..." autofocus />
                                    <button type="submit" class="btn">
                                        <i class="fa fa-terminal"></i> Log in
                                    </button>
                                </div>
                            </form>
                        </div>

                        <div ng-if="!user && signup">
                            <form id="newsletter-form" class="the-form anim-go-left" ng-submit="createUser()">
                                <div class="field-wrapper">
                                    <input type="text" class="textfield required" ng-model="$parent.username" name="username" placeholder="Please enter your username..." autofocus />
                                    <button type="submit" class="btn">
                                        <i class="fa fa-fire"></i> Sign up
                                    </button>
                                </div>
                        </div>

                        <div ng-if='delay'><i class="fa fa-spinner fa-spin"></i></div>

                        <div ng-if="user">
                            <form id="newsletter-form" class="the-form anim-go-left" ng-submit="addStop()">
                                <div class="field-wrapper">
                                    <input type="text" class="textfield required" ng-model="$parent.inputStop" name="stop" placeholder="Please enter a nearby bus stop..." />
                                    <button type="submit" class="btn">
                                        <i class="fa fa-search-plus"></i> Add
                                    </button>
                                </div>
                            </form>
                        </div>

                        <br>
                        <div ng-repeat="err in errArray" ng-show="errShow" ng-if="false">
                            <div class="err animated bounceIn">{{err}}</div>
                        </div>
                        <hr>
                        <button type="button" class="btn3" ng-click='reset()' ng-if="!user">
                            <i class="fa fa-arrow-circle-o-left fa-lg"></i>
                        </button>
                        <br>
                        <div ng-if="user">
                          <br>
                          <hr/><br>
                          <div ng-if="user">
                            <button type="button" class="btn" ng-click="logout">{{user}}</button>
                        </div>
                    </div>
                    <br>
            </div>
        </div>
    </section>
    <!-- END CONTENT SECTION -->
</div>
</div>
<!-- END MAIN PAGE -->

<div id="flare-1" class="flare"><img src="images/flare-1.png"/></div>
<div id="flare-2" class="flare"><img src="images/flare-2.png"/></div>
<div id="flare-3" class="flare"><img src="images/flare-3.png"/></div>
<div id="flare-4" class="flare"><img src="images/flare-4.png"/></div>


<% include footer %>