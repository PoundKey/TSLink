<div class="message" ng-repeat="(stop, detail) in coreData">
  <div class="message animated fadeInUp" ng-repeat="route in detail">
    <button class="btn arrive-box" ng-init="tuner=false" ng-click="(tuner = tuner ? false : true)">
      <div class='prev'>
        <span class="arrive-left-item"><i class="fa fa-bus"></i> {{route.route}} {{route.dest}} </span>
        <span class=" double-slash-bar">&nbsp;&#166;&nbsp;</span>
        <div class="grow arrive-mid-item">
          <i class="fa fa-bell-o"></i> {{compute(route.cTime)}}
          <i class="fa fa-at"></i> {{route.aTime}}
        </div>
        <span class="double-slash-bar">&nbsp;&#166;&nbsp;</span>
        <span class="arrive-right-item">
          <i class="fa fa-flag-o"></i> {{stop}}
          <a ng-click="remove(stop)" class="btn3">
            <i class="fa fa-trash-o"></i></a>
        </span>
      </div>

      <div class="future animated pullUp" ng-if="tuner">
        <hr />
        <div ng-if="(route.extra.length > 0)">
          Next <i class="fa fa-angle-left"></i>
          <i class="fa fa-bus"></i>  {{route.route}}<i class="fa fa-angle-right"></i> :
          <span ng-repeat="next in route.extra">
            <span class='extra'> {{next.ec}} min @ {{next.ea}}</span>
          </span>
        </div>
        <div ng-if="!(route.extra.length > 0)">
        No more <i class="fa fa-angle-left"></i>
         <i class="fa fa-bus"></i>  {{route.route}}<i class="fa fa-angle-right"></i> will arrive at this moment.
        </div>
        <br>
      </div>
      </button>
      <span>&nbsp;</span>
      <br><br>
  </div>
</div>

